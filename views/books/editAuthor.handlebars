<div class="createBook">
    <h1>Update Author</h1>
    <form action="/updateAuthor/{{author.id}}" method="post" enctype="multipart/form-data">
        <label for="name">Name</label><br>
        <input type="text" name="name" placeholder="Enter name" value="{{author.name}}" required><br>
        <label for="bio">Bio</label><br>
        <input type="text" name="bio" placeholder="Enter bio" value="{{author.bio}}" required><br>
        <label for="nationality">Nationality</label><br>
        <input type="text" name="nationality" value="{{author.nationality}}" required><br>
        <label for="birthDate">Birth date</label><br>
        <input type="text" name="birthDate" value="{{author.birth_date}}" required><br>
        <br>
        <input type="submit" value="Update">
    </form>
    <p class="errorMessenge">
        {{#if error}}
            {{error}}
        {{/if}}
    </p>
</div>