<div class="createBook">
    <h1>Update Genre</h1>
    <form action="/updateGenre/{{genre.id}}" method="post" enctype="multipart/form-data">
        <label for="name">Name</label><br>
        <input type="text" name="name" placeholder="Enter name" value="{{genre.name}}" required><br>
        <label for="description">Description</label><br>
        <input type="text" name="description" placeholder="Enter description" value="{{genre.description}}" required><br>
        <br>
        <input type="submit" value="Update">
    </form>
    <p class="errorMessenge">
        {{#if error}}
            {{error}}
        {{/if}}
    </p>
</div>